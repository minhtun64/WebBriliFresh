@model WebBriliFresh.Models.Product

@{
    ViewData["Title"] = "Create";

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<h1>Thêm mới sản phẩm</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProName" class="control-label">Tên sản phẩm</label>
                <input asp-for="ProName" class="form-control" />
                <span asp-validation-for="ProName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type.MainType" class="control-label">Loại chính</label>
                <select asp-for="Type.MainType" class="form-control" asp-items="ViewBag.MainType"></select>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label">Loại</label>
                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId1"></select>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Giá bán</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Source" class="control-label"></label>
                <input asp-for="Source" class="form-control" />
                <span asp-validation-for="Source" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Ngày</label>
                <input asp-for="StartDate" type="date" id="myID" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Des" class="control-label"></label>
                <input asp-for="Des" class="form-control" />
                <span asp-validation-for="Des" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <input asp-for="Unit" class="form-control" />
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsDeleted" class="control-label"></label>
                <input asp-for="IsDeleted" class="form-control" />
                <span asp-validation-for="IsDeleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

 <script type="text/javascript" >
    $(document).ready(function () {
        flatpickr("#myID", {
            dateFormat: "d/m/Y",
        });

        var maintype = $("#Type_MainType");
        var subtype = $("#Type_MainType");

        $("#Type_MainType").change(function () {
            if (maintype.find(":selected").val() === 'Rau củ') {
                subtype.setAttribute("asp-items", "ViewBag.TypeId1")
            } else if (maintype.find(":selected").val() === 'Thịt cá') {
                subtype.setAttribute("asp-items", "ViewBag.TypeId2")
            } else {
                subtype.setAttribute("asp-items", "ViewBag.TypeId3")
            }
        })
    })

</script>
